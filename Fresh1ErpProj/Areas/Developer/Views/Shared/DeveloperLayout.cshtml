
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeveloperLayout</title>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        #main {
            font-family: 'Bookman Old Style';
            text-align: center;
            font-size: 24px;
        }
        /* .nav-link {
            margin-left: 10px;
            margin-right: 10px;

        }*/
        ul {
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <div class="container-fluid" style="margin:0%;padding:0%">
        <div class="row" style="margin:0%;padding:0%">
            <div class="col-md-2 " style="background-color:white;height:auto">
                <div class="d-flex flex-column flex-shrink-0  text-bg-black" style="width:auto;">
                    <a href="/" class="d-flex align-items-center text-white text-decoration-none">
                        <h3 id="main">
                            Menu
                        </h3>


                    </a>
                    <hr />
                    <ul class="nav nav-pills flex-column ">
                        <li class="nav-item">
                            <a href="#" class="nav-link active" title="Dashboard">
                                <i class='fas fa-list' style='font-size:24px'></i>
                                Dashboard
                            </a>
                        </li>
                        <br />
                        <li>
                            <a href="/Developer/CourseDev/Course" class="nav-link text-white" title="Enquiry Form">
                                <i class='far fa-file-alt' style='font-size:24px'></i>
                                Course
                            </a>
                        </li>
                        <br />
                        <li>
                            <a href="/Developer/CourseDev/CourseFees" class="nav-link text-white" title="All Enquiries">
                                <i class='fas fa-money-check-alt' style='font-size:24px'></i>
                                CourseFee
                            </a>
                        </li>
                    </ul>
                    <hr>

                </div>
            </div>
            <div class="col-md-10" style="margin:0px;padding:0%;">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
